{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Flask: Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [],
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "justMyCode": false
        },
        {
            "name": "ML: Labeling CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/services/ml/training/label_helper.py",
            "console": "integratedTerminal"
        }
    ]
}