# --- Flask Settings ---
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# --- Security ---
SECRET_KEY=change-me

# --- Database ---
DATABASE_URL=sqlite:///app.db

# --- SocketIO ---
SOCKETIO_ENABLED=1
SOCKETIO_ASYNC_MODE=gevent
SOCKETIO_PATH=/sheoak/socket.io

# --- Logging ---
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=text

# --- Presence Detection ---
PRESENCE_SCAN_INTERVAL=60
DISABLE_PRESENCE_MONITOR=0
DISABLE_MDNS=0

# --- SNMP ---
ENABLE_SNMP_PRESENCE=0
SNMP_TARGET_IP=192.168.1.1
SNMP_COMMUNITY=public
SNMP_POLL_INTERVAL=60
SNMP_AUTHORITATIVE=0
SNMP_IPNETTOMEDIA_PHYS_OID=1.3.6.1.2.1.4.22.1.2
SNMP_IPNETTOMEDIA_NET_OID=1.3.6.1.2.1.4.22.1.3
SNMP_CLIENT_HOSTNAME_OID=
SNMP_CLIENT_SIGNAL_OID=
SNMP_CLIENT_BAND_OID=

# --- GPIO ---
GPIO_MODE=mock
MOTION_HARDWARE_DEBOUNCE_MS=300
HARDWARE_LOG_FILE=hardware_activity.csv

# --- Locale ---
TIMEZONE=Australia/Perth
LOCALE=en-AU

# --- Demo ---
DEMO_MODE=0
DEMO_REPLAY_DELAY_MS=800
DEMO_REPLAY_BATCH=20
